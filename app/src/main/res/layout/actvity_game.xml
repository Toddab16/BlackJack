        android:layout_alignTop="@+id/dealer_5_imageView"
        android:layout_alignLeft="@+id/dealer_5_imageView"
        android:layout_alignStart="@+id/dealer_5_imageView"
        android:layout_marginLeft="25dp" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="102dp"
        android:id="@+id/dealer_7_imageView"
        android:src="@drawable/card_back"
        android:layout_alignTop="@+id/dealer_6_imageView"
        android:layout_alignLeft="@+id/dealer_6_imageView"
        android:layout_alignStart="@+id/dealer_6_imageView"
        android:layout_marginLeft="25dp" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="102dp"
        android:id="@+id/dealer_8_imageView"
        android:src="@drawable/card_back"
        android:layout_alignTop="@+id/dealer_7_imageView"
        android:layout_alignLeft="@+id/dealer_7_imageView"
        android:layout_alignStart="@+id/dealer_7_imageView"
        android:layout_marginLeft="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DEALER HAS"
        android:id="@+id/dealer_score1_textView"
        android:layout_below="@+id/dealer_1_imageView"
        android:layout_alignLeft="@+id/dealer_textView"
        android:layout_alignStart="@+id/dealer_textView"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5"
        android:id="@+id/dealer_score_textView"
        android:layout_alignTop="@+id/dealer_score1_textView"
        android:layout_toRightOf="@+id/dealer_score1_textView"
        android:layout_toEndOf="@+id/dealer_score1_textView"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PLAYER"
        android:id="@+id/player_textView"
        android:layout_below="@+id/dealer_score1_textView"
        android:layout_alignLeft="@+id/dealer_score1_textView"
