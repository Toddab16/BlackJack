        android:layout_alignLeft="@+id/player_textView"
        android:layout_alignStart="@+id/player_textView" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="102dp"
        android:id="@+id/player_2_imageView"
        android:src="@drawable/three_diamonds"
        android:layout_alignTop="@+id/player_1_imageView"
        android:layout_alignLeft="@+id/player_1_imageView"
        android:layout_alignStart="@+id/player_1_imageView"
        android:layout_marginLeft="25dp" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="102dp"
        android:id="@+id/player_3_imageView"
        android:src="@drawable/card_back"
        android:layout_alignTop="@+id/player_2_imageView"
        android:layout_alignLeft="@+id/player_2_imageView"
        android:layout_alignStart="@+id/player_2_imageView"
        android:layout_marginLeft="25dp" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="102dp"
        android:id="@+id/player_4_imageView"
        android:src="@drawable/card_back"
        android:layout_alignTop="@+id/player_3_imageView"
        android:layout_alignLeft="@+id/player_3_imageView"
        android:layout_alignStart="@+id/player_3_imageView"
        android:layout_marginLeft="25dp" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="102dp"
        android:id="@+id/player_5_imageView"
        android:src="@drawable/card_back"
        android:layout_alignTop="@+id/player_4_imageView"
        android:layout_alignLeft="@+id/player_4_imageView"
        android:layout_alignStart="@+id/player_4_imageView"
        android:layout_marginLeft="25dp" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="102dp"
        android:id="@+id/player_6_imageView"
        android:src="@drawable/card_back"
        android:layout_alignTop="@+id/player_5_imageView"
        android:layout_alignLeft="@+id/player_5_imageView"
        android:layout_alignStart="@+id/player_5_imageView"
        android:layout_marginLeft="25dp" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="102dp"
        android:id="@+id/player_7_imageView"
        android:src="@drawable/card_back"
        android:layout_alignTop="@+id/player_6_imageView"
        android:layout_alignLeft="@+id/player_6_imageView"
        android:layout_alignStart="@+id/player_6_imageView"
        android:layout_marginLeft="25dp" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="102dp"
        android:id="@+id/player_8_imageView"
        android:src="@drawable/card_back"
        android:layout_alignTop="@+id/player_7_imageView"
        android:layout_alignLeft="@+id/player_7_imageView"
        android:layout_alignStart="@+id/player_7_imageView"
        android:layout_marginLeft="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PLAYER HAS"
        android:id="@+id/player_score1_textView"
        android:layout_below="@+id/player_1_imageView"
        android:layout_alignLeft="@+id/player_1_imageView"
        android:layout_alignStart="@+id/player_1_imageView"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="13"
        android:id="@+id/player_score_textView"
        android:layout_alignTop="@+id/player_score1_textView"
        android:layout_toRightOf="@+id/player_score1_textView"
        android:layout_toEndOf="@+id/player_score1_textView"
        android:layout_marginLeft="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HIT"
        android:id="@+id/hit_button"
        android:layout_below="@+id/player_score1_textView"
        android:layout_alignLeft="@+id/player_score1_textView"
        android:layout_alignStart="@+id/player_score1_textView"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STAND"
        android:id="@+id/stand_button"
        android:layout_below="@+id/player_score1_textView"
        android:layout_toRightOf="@+id/hit_button"
        android:layout_toEndOf="@+id/hit_button"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CASH: $"
        android:id="@+id/cash_intro_textView"
        android:layout_alignTop="@+id/cash_textView"
        android:layout_toLeftOf="@+id/cash_textView"
        android:layout_toStartOf="@+id/cash_textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="100"
        android:id="@+id/cash_textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" />

