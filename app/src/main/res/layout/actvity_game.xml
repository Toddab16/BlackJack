        android:layout_alignTop="@+id/dealer_4_imageView"
        android:layout_alignLeft="@+id/dealer_4_imageView"
        android:layout_alignStart="@+id/dealer_4_imageView"
        android:layout_marginLeft="25dp" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="102dp"
        android:id="@+id/dealer_6_imageView"
